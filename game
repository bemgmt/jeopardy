<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Realtor Jeopardy</title>
  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background-color: #000080;
      color: white;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    h1 {
      margin-top: 20px;
    }

    .scoreboard {
      margin: 10px;
      display: flex;
      gap: 40px;
      font-size: 24px;
    }

    .board {
      display: grid;
      grid-template-columns: repeat(5, 1fr);
      grid-gap: 2px;
      max-width: 900px;
      margin-top: 20px;
    }

    .cell {
      background-color: #1e3a8a;
      border: 1px solid #ffffff33;
      padding: 30px;
      text-align: center;
      font-size: 24px;
      cursor: pointer;
    }

    .cell.used {
      background-color: #000033;
      cursor: default;
    }

    .modal {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background: rgba(0,0,0,0.8);
      justify-content: center;
      align-items: center;
      text-align: center;
      z-index: 999;
    }

    .modal-content {
      background: white;
      color: black;
      padding: 30px;
      border-radius: 10px;
      width: 60%;
    }

    .modal-buttons {
      margin-top: 20px;
      display: flex;
      justify-content: space-around;
    }

    .modal-buttons button {
      padding: 10px 20px;
      font-size: 16px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <h1>Realtor Jeopardy</h1>
  <div class="scoreboard">
    <div>Team 1: <span id="score1">0</span></div>
    <div>Team 2: <span id="score2">0</span></div>
  </div>
  <div class="board" id="board"></div>

  <div class="modal" id="modal">
    <div class="modal-content">
      <div id="questionText">Lorem ipsum?</div>
      <div class="modal-buttons">
        <button onclick="awardPoints(1)">Team 1</button>
        <button onclick="awardPoints(2)">Team 2</button>
        <button onclick="closeModal()">Close</button>
      </div>
    </div>
  </div>

  <script>
    const categories = ["Category 1", "Category 2", "Category 3", "Category 4", "Category 5"];
    const questionsPerCategory = 4;
    const board = document.getElementById("board");
    let currentPoints = 0;

    const score = {
      1: 0,
      2: 0
    };

    function updateScores() {
      document.getElementById("score1").textContent = score[1];
      document.getElementById("score2").textContent = score[2];
    }

    function createBoard() {
      categories.forEach(cat => {
        const header = document.createElement("div");
        header.className = "cell";
        header.textContent = cat;
        board.appendChild(header);
      });

      for (let i = 1; i <= questionsPerCategory; i++) {
        categories.forEach((_, index) => {
          const cell = document.createElement("div");
          cell.className = "cell";
          const points = i * 100;
          cell.textContent = `$${points}`;
          cell.onclick = () => showQuestion(cell, points);
          board.appendChild(cell);
        });
      }
    }

    function showQuestion(cell, points) {
      if (cell.classList.contains("used")) return;
      currentPoints = points;
      cell.classList.add("used");
      document.getElementById("questionText").textContent = `Question for $${points}: Lorem ipsum dolor sit amet?`;
      document.getElementById("modal").style.display = "flex";
    }

    function closeModal() {
      document.getElementById("modal").style.display = "none";
    }

    function awardPoints(team) {
      score[team] += currentPoints;
      updateScores();
      closeModal();
    }

    createBoard();
  </script>
</body>
</html>
